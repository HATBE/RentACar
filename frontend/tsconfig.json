{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    // recommended for import compatibility
    "moduleResolution": "node",
    // ensure compatibility with node-style imports
    "resolveJsonModule": true,
    // for importing JSON files if needed
    "strict": true,
    // enable strict mode
    "skipLibCheck": true
    // skip library type checking
  }
}
